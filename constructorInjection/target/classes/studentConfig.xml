<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean id = "student" class = "constructorInjection.task1.Student">
    <constructor-arg name = "id">
    <value>1</value>
    </constructor-arg>
    
    <constructor-arg name = "name">
    <value>Mahendra</value>
    </constructor-arg>
    
    <constructor-arg name = "coursecode">
    <value>SPIC</value>
    </constructor-arg>
    
    <constructor-arg name = "marks">
    <value>90</value>
    </constructor-arg>
    
    <constructor-arg name = "grade">
    <value>A</value>
    </constructor-arg>
    
   </bean>
    
    

</beans>