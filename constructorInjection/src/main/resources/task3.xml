<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    
    
    <bean id = "professor" class = "constructorInjection.task3.Professor">
    <constructor-arg name = "name">
    <value>Mahendra</value>
    </constructor-arg>
    
    <constructor-arg name = "subject">
    <value>DSA</value>
    </constructor-arg>
    
    </bean>
    
    
    <bean id ="department" class = "constructorInjection.task3.Department">
    <constructor-arg name = "deptName">
    <value>Bio Department</value>
    </constructor-arg>
    <constructor-arg name = "professors">
    <ref bean = "professor"/>
    </constructor-arg>
    </bean>
    
    
    <bean id = "college" class= "constructorInjection.task3.College">
    <constructor-arg name = "collegeName">
    <value>SSE</value>
    </constructor-arg>
    
    <constructor-arg name = "department">
    <ref bean = "department"/>
    </constructor-arg>
    </bean>

</beans>