<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Department Bean -->
    <bean id="department" class="organization.Department">
        <property name="deptId">
            <value>10</value>
        </property>
        <property name="deptName">
            <value>B.E</value>
        </property>
        <property name="location">
            <value>Naidupeta</value>
        </property>
    </bean>

    <!-- Employee Bean -->
    <bean id="employee" class="organization.Employee">
        <property name="empId">
            <value>11</value>
        </property>
        <property name="empName">
            <value>Mahendra</value>
        </property>
        <property name="salary">
            <value>15000.0</value>
        </property>

        <!-- âœ… Correct property and ref -->
        <property name="dept">
            <ref bean="department"/>
        </property>
    </bean>

</beans>
